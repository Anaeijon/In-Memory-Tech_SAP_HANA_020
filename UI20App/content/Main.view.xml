<!-- this is a comment. in the next tag, the xmlns tags define namespaces, the name after of the equality signs being the name of the namespace. In the code below, we can use this name instead of the full path -->
<mvc:View controllerName="content.Main"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:ux3="sap.ui.ux3">
    <!-- This is the text that we want to show -->
    <ux3:Shell appIcon="/sapucc/gbi/files/dev/logo.png"
               id="shell"
               appTitle="UI5 App 020"
               showLogoutButton="true"
               showSearchTool="false"
               showInspectorTool="false"
               showFeederTool="false"
               worksetItemSelected="itemSelected">
        <ux3:headerItems>
            <Label text="GBI_020"
                   tooltip="Username" />
        </ux3:headerItems>
        <ux3:worksetItems>
            <!-- each navigation item has a key so we can trigger it and a text that is shown -->
            <ux3:NavigationItem key="overview"
                                text="Overview" />
            <ux3:NavigationItem key="salesOrders"
                                text="Sales Orders" />
        </ux3:worksetItems>
    </ux3:Shell>
</mvc:View>
